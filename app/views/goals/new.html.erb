<div class="container">
	<h1 class="new-title">CREATE A NEW GOAL</h1>
	<div class="form-container">
		<%= form_for @goal do |f| %>
			<%= f.label :title , "my goal is to:" , :class => "form-title" %><br>
			<%= f.text_field :title , :class => "form-title-input" %><br>
			<%= f.label :description , :class => "form-desc" %><br>
			<%= f.text_area :description , :class => "form-desc-input" %><br>
			<%= f.label :end_date , "i want to accomplish this goal by:" , :class => "form-end" %><br>
			<%= f.date_field :end_date , :class => "form-end-date" %><br>
			<%= f.submit "Submit Goal" , :class => "goal-submit" %><br>
		<% end %>
	</div>
</div>